#include<stdio.h>
int main()
{
	int r,c,i,j,a[100] [100],b[100][100],sum[100][100];
	printf("enter a rows:");
	scanf("%d",& r);
	printf("enter a coloumn:");
	scanf("%d",& c);
	printf("enter the first matrix:");
	for(i=0;i<r;i++)
		for(j=0;j<c;j++)
		{
			printf("enter a element a%d%d:",i+1,j+1);
			scanf("%d",&a[i][j]);
		}
	printf("enter the second matrix:");
	for(i=0;i<r;i++)			
		for(j=0;j<c;j++)
		{
			printf("enter a element b%d%d:",i+1,j+1);
			scanf("%d",&b[i][j]);
		}
	for(i=0;i<r;i++)		
		for(j=0;j<c;j++)
		{
			sum[i][j]=a[i][j]+b[i][j];
		}	
	printf("\nsum of two matrices:\n");
	for(i=0;i<r;i++)
		for(j=0;j<c;j++){
			printf("%d  ",sum[i][j]);
			if(j==c-1){
				printf("\n\n");
			}

	}
		return 0;



}
