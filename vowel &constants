#include<stdio.h>
int main()
{
	char c;
	int lower_vowel,upper_vowel;
	printf("enter the letter:");
	scanf("%d",&c);
	lower_vowel=(c=='a' || c=='e'|| c=='i'|| c=='o' || c=='u');
	upper_vowel=(c=='A' || c=='E'|| c=='I'|| c=='O' || c=='U');
	if(upper_vowel ||lower_vowel)
	printf("c is a vowel letter %c",c);
	else
	printf("c is not vowel letter %c",c);
	return 0;
}
